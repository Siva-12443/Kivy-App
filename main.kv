MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        Image:
            source: "assets/logo.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .65}
        MDLabel: 
            text: "H e l l o !"
            font_name: "SPoppins"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel: 
            text: "SA VIDHYA YA VIMUTAYE"
            font_name: "MPoppins"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        Button: 
            text: "LOGIN"
            font_name: "Poppins"
            size_hint: .66, .065    
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            on_release: 
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before: 
                Color:
                    rgb: app.btn_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button: 
            text: "SIGNUP"
            font_name: "Poppins"
            size_hint: .66, .065    
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .09}
            color: app.btn_color
            background_color: 0, 0, 0, 0
            on_release: 
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before: 
                Color:
                    rgb: app.btn_color
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100
